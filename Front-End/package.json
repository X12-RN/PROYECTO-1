{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Your app description",
  "author": "Adrian <riandod@hotmail.com>",
  "homepage": "https://github.com/X12-RN/PROYECTO-1.git",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "backend-flask": "nodemon --config nodemon-flask.json",
    "backend-uvicorn": "nodemon --config nodemon-uvicorn.json",
    "start": "vite",
    "electron:dev": "npm-run-all -p dev electron:start",
    "electron:start": "wait-on tcp:5173 && electron .",
    "electron:build": "vite build && electron-builder",
    "dev:servers": "npm-run-all -p backend-flask backend-uvicorn",
    "dev:all": "npm-run-all -p dev dev:servers electron:start"
  },
  "build": {
    "appId": "com.kiosko.app",
    "productName": "Kiosko App",
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.1",
    "socket.io-client": "^4.8.1",
    "sweetalert2": "^11.15.10"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^8.0.0",
    "nodemon": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^4.5.5",
    "wait-on": "^6.0.0"
  }
}
